<%- include('partials/header.ejs') %>
<h2>Entretien_nettoyage</h2>
<table>
  <thead>
    <tr>
      <th>Nom du produit</th>
      <th>Quantité</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <!-- Boucle sur la liste des produits -->
    <% for (const entretien of locals.entretiens){ %>
    <tr>
      <td><%= entretien.article %></td>
      <td><%= entretien.quantité %></td>
      <td>
        <!-- Formulaire pour mettre à jour la quantité -->
        <form action="/update-quantity/<%= entretien.id %>" method="post">
          <input type="number" name="quantité" value="<%= entretien.quantité %>">
          <button type="submit">Mettre à jour</button>
        </form>
        <!-- Lien pour supprimer le produit -->
        <a href="/delete-product/<%= entretien.id %>">Supprimer</a>
      </td>
    </tr>
    <% }; %>
  </tbody>
</table>

<!-- Formulaire pour ajouter un nouveau produit -->
<h3>Ajouter un produit</h3>
<form action="/add-product" method="post">
  <label>Nom du produit :
    <input type="text" name="name">
  </label>
  <label>Quantité :
    <input type="number" name="quantity">
  </label>
  <button type="submit">Ajouter</button>
</form>

<%- include('partials/footer.ejs') %>